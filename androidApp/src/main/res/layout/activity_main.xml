<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1a1a2e"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Title -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš¦ FUI - Image Analysis"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traffic and Crowd Analysis System"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="center"
                android:paddingBottom="16dp"/>

        <!-- Image Preview -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="16dp"
                android:background="#222233">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_gallery"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ“· Select a photo"
                    android:textColor="#666666"
                    android:textSize="16sp"/>
        </FrameLayout>

        <!-- Stats Cards -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <!-- Vehicle Count -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2d2d44"
                    android:padding="12dp"
                    android:layout_marginEnd="4dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸš— VEHICLES"
                        android:textColor="#888888"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/vehicleCountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="28sp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <!-- People Count -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2d2d44"
                    android:padding="12dp"
                    android:layout_marginStart="4dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ PEOPLE"
                        android:textColor="#888888"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/peopleCountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#2196F3"
                        android:textSize="28sp"
                        android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Traffic and Crowd Status -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

            <!-- Traffic Status -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2d2d44"
                    android:padding="12dp"
                    android:layout_marginEnd="4dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸš¦ TRAFFIC"
                        android:textColor="#888888"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/trafficLevelText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waiting..."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <!-- Crowd Status -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#2d2d44"
                    android:padding="12dp"
                    android:layout_marginStart="4dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ CROWD"
                        android:textColor="#888888"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/crowdLevelText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waiting..."
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Row 1 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <Button
                    android:id="@+id/galleryButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="ðŸ“ Gallery"
                    android:textSize="14sp"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp"/>

            <Button
                    android:id="@+id/cameraButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="ðŸ“· Camera"
                    android:textSize="14sp"
                    android:backgroundTint="#673AB7"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Buttons Row 2 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

            <Button
                    android:id="@+id/analyzeButton"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="2"
                    android:text="ðŸ” ANALYZE"
                    android:textSize="16sp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>

            <Button
                    android:id="@+id/demoButton"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="ðŸŽ® Demo"
                    android:textSize="14sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#4CAF50"/>

        <!-- Status Text -->
        <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸ Select or take a photo"
                android:textSize="14sp"
                android:textColor="#888888"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"/>

        <!-- Detailed Report -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Detailed Report"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

        <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:text="Analysis results will appear here..."
                android:textSize="11sp"
                android:textColor="#CCCCCC"
                android:background="#222233"
                android:padding="12dp"
                android:fontFamily="monospace"/>

        <!-- Footer -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ Data processed on device, not sent to server"
                android:textSize="11sp"
                android:textColor="#666666"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>

