<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Device ID (örn: cam-01)" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location / description" />

        <EditText
            android:id="@+id/url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Server URL (örn: http://10.0.2.2:8080)" />

        <!-- Yeni: image URL alanı -->
        <EditText
            android:id="@+id/image_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image URL (opsiyonel)" />

        <Button
            android:id="@+id/use_sample_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use sample bus stop"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resim Seç"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/selected_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seçili dosya: -"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/analyze_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analiz Gönder"
            android:layout_marginTop="12dp" />

        <!-- Camera controls -->
        <EditText
            android:id="@+id/camera_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Camera URL (for polling)"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/start_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Camera Polling"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/stop_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Camera Polling"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/camera_status_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Status"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/camera_status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Camera status: Unknown" />

        <TextView
            android:id="@+id/result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sonuçlar burada gözükecek" />

    </LinearLayout>
</ScrollView>
